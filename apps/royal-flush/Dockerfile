# Run the container with `docker run -p 3000:3000 -t royal-flush`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system royal-flush && \
          adduser --system -G royal-flush royal-flush

COPY dist/apps/royal-flush royal-flush
RUN chown -R royal-flush:royal-flush .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix royal-flush --omit=dev -f install

CMD [ "node", "royal-flush" ]
